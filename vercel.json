{
    "version": 2,
    "builds": [
        {
        "src": "src/server.ts",
        "use": "@vercel/node"
        }
    ],
    "routes": [ 
        {
            "src": "(.*)",
            "dest": "src/server.ts",
            "methods": ["OPTIONS", "GET", "POST", "PUT", "DELETE"],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "OPTIONS, GET, POST, PUT, DELETE",
                "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept"
            }
        }
    ]
}