{
    "openapi": "3.1.0",
    "info": {
        "title": "Gravity Falls API",
        "description": "Gravity Falls restfull API",
        "contact": { 
            "email": "anderson.backdev@gmail.com"
        }
    },
    "servers": [
        {
            "url": "https://gf-db-transfer-quantxz.vercel.app",
            "description": "URL base"
        }
    ],
    "paths": {
        "/episodes/": {
            "get": {
                "summary": "Requisição dos Episodios",
                "description": "Essa rota do tipo get, retorna todos os episodios",
                "tags": ["Episodes"],
                "parameters": [
                    {
                        "id": "id",
                        "in": "params",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Episode"
                                }
                            }
                        }
                    }
                }
            }
        }
    },

    "components": {
        "schemas": {
            "Episode": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "title": {
                        "type": "string"
                    },
                    "ptBr_title": {
                        "type": "string"
                    },
                    "first_exibition": {
                        "type": "string"
                    },
                    "season": {
                        "type": "number"
                    },
                    "directed_by": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    },
                    "written_by": {
                        "type": "string"
                    }
                }
            }
        }
    }
}